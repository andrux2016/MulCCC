/*
 JavaScript Document 
 id="user-reg-box-page" 会员注册
*/  
$(document).ready(function(){	  
	  //功能：获得焦点外围变色	  
	   $('.user-reg-box-page .l .reg .row-1 .user_email_bd input').focus(function(){
		  $('.user-reg-box-page .u-box').removeClass('cur');
		  $(this).parent().addClass('cur');
	   });
	   $('.user-reg-box-page .l .reg .row-2 .user_name_bd input').focus(function(){
		  $('.user-reg-box-page .u-box').removeClass('cur');
		  $(this).parent().addClass('cur');
	   });
	   $('.user-reg-box-page .l .reg .row-3 .user_pwd_bd input').focus(function(){
		  $('.user-reg-box-page .u-box').removeClass('cur');
		  $(this).parent().addClass('cur');
	   });
	   $('.user-reg-box-page .l .reg .row-4 .user_pwd_bd input').focus(function(){
		  $('.user-reg-box-page .u-box').removeClass('cur');
		  $(this).parent().addClass('cur');
	   });

	   //功能：失去焦点	   
	   $('.user-reg-box-page .l .reg .row-1 .user_email_bd input').blur(function(){
		  $('.user-reg-box-page .u-box').removeClass('cur');		   
	   });
	   $('.user-reg-box-page .l .reg .row-2 .user_name_bd input').blur(function(){
		  $('.user-reg-box-page .u-box').removeClass('cur');		   
	   });
	   $('.user-reg-box-page .l .reg .row-3 .user_pwd_bd input').blur(function(){
		  $('.user-reg-box-page .u-box').removeClass('cur');		   
	   });
	   $('.user-reg-box-page .l .reg .row-4 .user_pwd_bd input').blur(function(){
		  $('.user-reg-box-page .u-box').removeClass('cur');		   
	   });
});
 
 
 
 
 
 
 
 
 
 