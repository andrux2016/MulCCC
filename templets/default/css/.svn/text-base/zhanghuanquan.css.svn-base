@charset "utf-8";
/* CSS Document */

#mcpmain #appTab .thisTab {
    -moz-border-bottom-colors: none;
    -moz-border-left-colors: none;
    -moz-border-right-colors: none;
    -moz-border-top-colors: none;
    background-color: #FFFFFF;
    border-color: #DCDCDC #DCDCDC -moz-use-text-color;
    border-image: none;
    border-style: solid solid none;
    border-width: 1px 1px medium;
}
#mcpmain #appTab ul li {
    float: left;
    margin: 0 3px -1px;
    position: relative;
    z-index: 10;
}
#mcpmain #appTab ul {
    border-bottom: 1px solid #DCDCDC;
    height: 25px;
    margin-bottom: -1px;
    padding-left: 10px;
}


#mcpmain #appTab .thisTab a {
    color: #008DB7;
}
#mcpmain #appTab ul li a {
    color: #313131;
    float: left;
    font-weight: 700;
    height: 25px;
    line-height: 25px;
    padding: 0 10px;
    text-decoration: none;
}



.postForm .cellBg {
    background: none repeat scroll 0 0 #F7F7F7;
}
.postForm p, contentShow p {
    line-height: 28px;
    margin-top: 10px;
    min-height: 25px;
    overflow: hidden;
    padding-bottom: 2px;
    padding-top: 2px;
}




#mcpmain #mainCp {
    background-color: #FFFFFF;
    border: 1px solid #DCDCDC;
    padding: 10px;
    position: relative;
}
.postForm, .contentShow {
    line-height: 25px;
    margin-bottom: 10px;
    min-height: 25px;
    padding: 10px;
}

.postForm label, .contentShow label {
    color: #727272;
    display: inline-block;
    padding-left: 5px;
    padding-right: 10px;
    text-align: right;
    vertical-align: top;
}
.xbt-mibao label {
    width: 7.5em;
}


.button, button {
    border: medium none;
    cursor: pointer;
   
}

