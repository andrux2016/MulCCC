	function UserLogin(){
	  	
		if($('#userid').val()==""){
			$('#showdiv').html("请填写Email！");
			$('#userid').focus();
			return false;
		}
		var reg = /^\w+((-\w+)|(\.\w+))*\@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z0-9]+$/;
		if(!reg.test($('#userid').val())){
			$('#showdiv').html("Email格式不正确！");
			$('#userid').focus();
			return false;
		}
		if($('#pwd').val()==""){
			$('#showdiv').html("请填写密码！");
			$('#pwd').focus();
			return false;
		}
