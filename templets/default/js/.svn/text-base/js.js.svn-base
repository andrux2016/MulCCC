$(document).ready(function(){
	$(".xbt-hq").hover(function(){
			$(this).addClass("hover");
			$(this).children("ul li").attr('class','');
		},function(){
			$(this).removeClass("hover");  
			$(this).children("ul li").attr('class','');
		}
	);
	$(".xbt-head-info").hover(function(){
			$(this).addClass("foucs");
			$(this).children("div").attr('class','ccc');
		},function(){
			$(this).removeClass("foucs");  
			$(this).children("div").attr('class','ccc');
		}
	);
})